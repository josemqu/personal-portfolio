---
import GitHub from "@/icons/GitHub.astro";
import PlayStore from "@/icons/PlayStore.astro";
import AppStore from "@/icons/AppStore.astro";
import Section from "../Section.astro";
import type { Projects, Titles } from "@/types/cv.ts";

interface Props {
  projects: Projects[];
  titles: Titles;
}

const { projects, titles } = Astro.props;
const title = titles.projects;
---

<Section title={title}>
  <ul>
    {
      projects?.map(
        ({
          name,
          isActive,
          description,
          highlights,
          url,
          github,
          playStore,
          appStore,
        }) => {
          const urlSrc = url ? new URL(url) : "#";
          const playStoreSrc = playStore ? new URL(playStore) : "#";
          const appStoreSrc = appStore ? new URL(appStore) : "#";
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <div class="nowrap">
                      <a
                        href={urlSrc}
                        target="_blank"
                        title={`${titles.viewProject} ${name}`}
                      >
                        {name}
                      </a>
                      {isActive && (
                        <span
                          class="running"
                          aria-label="En producción"
                          data-tooltip="En producción"
                        >
                          &#x25cf;
                        </span>
                      )}
                      {github && (
                        <a
                          class="github-code-link with-tooltip icon-link"
                          href={github}
                          target="_blank"
                          title={`${titles.viewCode} ${name}`}
                          aria-label={`${titles.viewCode} ${name}`}
                          data-tooltip={`${titles.viewCode} ${name}`}
                        >
                          <GitHub />
                        </a>
                      )}
                      {playStore && (
                        <a
                          class="github-code-link with-tooltip icon-link store-link"
                          href={playStoreSrc}
                          target="_blank"
                          title={`${name} ${titles.inPlayStore}`}
                          aria-label={`${name} ${titles.inPlayStore}`}
                          data-tooltip={`${name} ${titles.inPlayStore}`}
                        >
                          <PlayStore />
                        </a>
                      )}
                      {appStore && (
                        <a
                          class="github-code-link with-tooltip icon-link store-link"
                          href={appStoreSrc}
                          target="_blank"
                          title={`${name} en App Store`}
                          aria-label={`${name} en App Store`}
                          data-tooltip={`${name} en App Store`}
                        >
                          <AppStore />
                        </a>
                      )}
                    </div>
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    /* margin-inline: 8px; */
  }

  article {
    border-radius: 8px;
    border: 2px solid var(--block-quote-border);
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    font-size: 1.2rem;
    font-weight: 500;
    margin-bottom: 4px;
  }

  article a {
    color: var(--bold-text);
  }

  article a:hover {
    text-decoration: underline;
  }

  article h3 span.running {
    margin-left: 4px;
    font-size: small;
    color: var(--running-bg);
    position: relative;
    line-height: 1;
    cursor: pointer;
  }

  /* Tooltip */
  article h3 span.running::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 140%;
    left: 50%;
    transform: translateX(-50%) scale(0.98);
    background: var(--color-bg2);
    color: var(--bold-text);
    border: 1px solid var(--block-quote-border);
    border-radius: 6px;
    padding: 4px 8px;
    font-size: 0.75rem;
    white-space: nowrap;
    box-shadow: 0 6px 16px var(--color-box-shadow);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.15s ease,
      transform 0.15s ease,
      visibility 0.15s ease,
      bottom 0.15s ease;
    pointer-events: none;
    z-index: 10;
  }

  article h3 span.running::before {
    content: "";
    position: absolute;
    bottom: 132%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: var(--color-bg2);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.15s ease,
      visibility 0.15s ease,
      bottom 0.15s ease;
    z-index: 10;
  }

  article h3 span.running:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) scale(1);
    bottom: 150%;
  }

  article h3 span.running:hover::before {
    opacity: 1;
    visibility: visible;
    bottom: 142%;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  .nowrap {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.2rem;
  }

  footer span {
    border-radius: 6px;
    background: var(--pills-bg);
    color: var(--pills-text);
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  /* Tooltip for icon links (GitHub / Play Store) */
  a.with-tooltip.icon-link {
    margin-left: 4px;
    position: relative;
  }

  a.with-tooltip.icon-link::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 140%;
    left: 50%;
    transform: translateX(-50%) scale(0.98);
    background: var(--color-bg2);
    color: var(--bold-text);
    border: 1px solid var(--block-quote-border);
    border-radius: 6px;
    padding: 4px 8px;
    font-size: 0.75rem;
    white-space: nowrap;
    box-shadow: 0 6px 16px var(--color-box-shadow);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.15s ease,
      transform 0.15s ease,
      visibility 0.15s ease,
      bottom 0.15s ease;
    pointer-events: none;
    z-index: 10;
  }

  a.with-tooltip.icon-link::before {
    content: "";
    position: absolute;
    bottom: 132%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: var(--color-bg2);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.15s ease,
      visibility 0.15s ease,
      bottom 0.15s ease;
    z-index: 10;
  }

  a.with-tooltip.icon-link:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) scale(1);
    bottom: 150%;
  }

  a.with-tooltip.icon-link:hover::before {
    opacity: 1;
    visibility: visible;
    bottom: 142%;
  }

  .bullet {
    font-size: 1rem;
  }

  @media (width <= 700px) {
    ul {
      /* margin-inline: 0px; */
    }

    article {
      /* border: none; */
      /* box-shadow: 0 1px 1px var(--code); */
      /* padding: 0 0 16px 0; */
    }
  }

  @media (width <= 360px) {
    ul {
      grid-template-columns: 1fr; /* Forzar una columna en pantallas ultra pequeñas */
    }

    .nowrap {
      flex-wrap: wrap; /* Permitir salto de línea para título e iconos */
      row-gap: 0.25rem;
    }

    article h3 {
      word-break: break-word; /* Evitar overflow por palabras largas */
    }
  }
</style>
