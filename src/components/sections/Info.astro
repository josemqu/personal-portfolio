---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import Mail from "@/icons/Mail.astro"
import Phone from "@/icons/Phone.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"
import Toggle from "@/components/ThemeChange.astro"

import type { SocialIcon } from "@/types"

const { name, label, location, profiles, phone, email } = basics
const { city, region } = location

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" • ")

---
<Section >
  <div class="info" >
    <h1 class="name">{name}</h1>
    <h2 class="desc">{label}</h2>
    <span class="location">
      <!-- <WorldMap /> -->
      <!-- {city}, {region} -->
    </span>
    <footer class="print">
      {printInfo}
    </footer>
      <div class="icons-inline">
        <footer class="no-print">
          {
            email && (
              <a
                href={`mailto:${email}`}
                title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Mail />
              </a>
            )
          }
          {
            phone && (
              <a
                href={`tel:${phone}`}
                title={`Llamar por teléfono a ${name} al número ${phone}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Phone />
              </a>
            )
          }
          {
            profiles.map(({ network, url, username }) => {
              const Icon = SOCIAL_ICONS[network]

              return (
                <a
                  href={url}
                  title={`Visitar el perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon />
                </a>
              )
            })
          }
        </footer>
        <Toggle />
      </div>
    </div>
</Section>

<style>

  

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: var(--profile-img-max-width);
    transition: all 0.5s linear 0.4s !important;
  }

  .hidden {
    height : 0;
    overflow : hidden;
    margin-bottom : 0;
  }

  .icons-inline {
    display: flex;
    justify-content:flex-start;
    align-items: center;
    width: 100%;
  }

  h1 {
    font-size: 2rem;
    color: var(--bold-text);
    transition: all 0.2s ease-out;
  }

  .text-sm {
    font-size: 1.5rem;
  }

  h2 {
    color: var(--color-text);
    font-weight: 400;
    font-size: 1.1rem;
    text-wrap: balance;
    /* margin-bottom: 1rem; */
  }

  img {
    /* aspect-ratio: 1 / 1; */
    /* object-fit: cover; */
    /* width: 128px; */
    /* border-radius: 16px; */
  }

  span {
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: var(--color-text);
    font-size: 0.65rem;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  footer a {
    color: var(--bold-text);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--block-quote-border);
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
  }

  footer a:hover {
    background: var(--color-bg);
    border-color: var(--hover-border-color)
    
  }

  @media (width <= 700px) {

    .icons-inline {
      justify-content: space-between;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
    }

    h2 {
      text-wrap: balance;
    }

  }
</style>