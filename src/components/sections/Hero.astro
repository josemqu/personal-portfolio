---
import { basics } from "@cv"
import Info from "../sections/Info.astro"
import Section from "@/components/Section.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import type { SocialIcon } from "@/types"
import Image from "@/components/Image.astro"

const { name, label, location, profiles, phone, email } = basics
const { link } = Astro.props

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" â€¢ ")
---

<Section>
  <div class="container">
    <div>
      <Info
        name={name}
        label={label}
        location={location}
        profiles={profiles}
        phone={phone}
        email={email}
      />
    </div>
    <figure>
      <a href={link} data-astro-prefetch >
        <Image />
      </a>
    </figure>
  </div>
</Section>

<style>
  
  .container {
    display: flex;
    flex-direction: row;
    align-items:center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: var(--bold-text);
    font-weight: 300;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  span {
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: var(--color-text);
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: var(--bold-text);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--block-quote-border);
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
  }

  footer a:hover {
    background: var(--color-bg);
    border: 1px solid var(--slider-input-bg);
  }

  @media (width <= 700px) {

    .container {
      flex-direction: column-reverse;
      justify-content: center;
      align-items: center;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
    }

    h2 {
      text-wrap: balance;
    }

  }
</style>
