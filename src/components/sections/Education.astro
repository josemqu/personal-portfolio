---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <div class="bullet"></div>
            <article>
              <header>
                <div>
                  <a href={url} title={`Ver ${url}`} target="_blank">
                    <h3>{institution}</h3>
                  </a>
                </div>
                <div class="time">
                  <h3><time>{years}</time></h3>
                </div>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    margin-left: 0.5rem;
    /* gap: 32px; */
  }

  li {
    padding: 1rem 0px 0px 1rem;
    border-left: 2px solid var(--block-quote-border);
    position: relative;
    display: flex;
  }

  .bullet {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: solid 4px var(--block-quote-border);
    position: absolute;
    top: 24px;
    left: -5px;
  }

  article {
    width: 100%;
  }

  article h3 {
    font-size: large;
    font-weight: 500;
    color: var(--bold-text);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }
  
  time {
    color: var(--block-quote-border);
    font-size: 0.85rem;
    min-width: 102px;
    text-wrap: nowrap;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
