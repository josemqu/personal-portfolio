---
import Section from "../Section.astro";
import HTML from "@/icons/html.astro";
import CSS from "@/icons/css.astro";
import JavaScript from "@/icons/javascript.astro";
import TypeScript from "@/icons/type.astro";
import React from "@/icons/react.astro";
import Node from "@/icons/node.astro";
import MySQL from "@/icons/mysql.astro";
import SQL from "@/icons/sql.astro";
import AstroJS from "@/icons/astro.astro";
import Git from "@/icons/git.astro";
import Python from "@/icons/python.astro";
import GitHub from "@/icons/GitHub.astro";
import Tailwind from "@/icons/tailwind.astro";
import Next from "@/icons/next.astro";
import MongoDB from "@/icons/mongodb.astro";
import PowerBI from "@/icons/powerbi.astro";
import Leaflet from "@/icons/leaflet.astro";
import ChartJS from "@/icons/chartjs.astro";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  SQL,
  AstroJS,
  Git,
  Python,
  GitHub,
  Next,
  MongoDB,
  PowerBI,
  Leaflet,
  Tailwind,
  ChartJS,
};
import type { Skills, Titles } from "@/types/cv.ts";
interface Props {
  titles: Titles;
  skills: Skills[];
}

const { skills, titles } = Astro.props;
const title = titles.skills;
---

<Section title={title}>
  <div class="marquee" aria-label="Skills marquee">
    <div class="track">
      <ul>
        {
          skills?.map(({ name }) => {
            const iconName = name === "Next.js" ? "Next" : name;
            const Icon = SKILLS_ICONS[iconName];

            return (
              <li class="pill" role="listitem">
                {Icon && <Icon />} <span>{name}</span>
              </li>
            );
          })
        }
      </ul>
      <ul aria-hidden="true">
        {
          skills?.map(({ name }) => {
            const iconName = name === "Next.js" ? "Next" : name;
            const Icon = SKILLS_ICONS[iconName];

            return (
              <li class="pill" role="listitem">
                {Icon && <Icon />} <span>{name}</span>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
</Section>

<style>
  .marquee {
    position: relative;
    overflow: hidden;
  }

  .track {
    display: flex;
    width: max-content;
    gap: 8px;
    animation: scroll-x var(--marquee-speed, 35s) linear infinite;
  }

  .marquee:hover .track { animation-play-state: paused; }

  .track > ul {
    display: inline-flex;
    gap: 8px;
    padding: 4px 0;
  }

  .pill {
    align-items: center;
    background: var(--pills-bg);
    color: var(--pills-text);
    border-radius: 6px;
    display: inline-flex;
    font-size: 0.85rem;
    font-weight: 500;
    gap: 6px;
    padding: 0.35rem 0.6rem;
    white-space: nowrap;
    border: 1px solid var(--border-color, transparent);
  }

  @keyframes scroll-x {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  @media (prefers-reduced-motion: reduce) {
    .track { animation: none; }
  }
</style>
