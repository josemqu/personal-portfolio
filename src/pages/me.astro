---
import Layout from "../layouts/Layout.astro"
import HeroFull from "../components/sections/HeroFull.astro"
import { basics } from "@cv"
const { name, label } = basics
---

<script src="/lib/theme-util.js" type="text/javascript" is:inline></script>
<Layout title={`Perfil de ${name} - ${label}`}>
  <main>
    <a href="/" class="body-section">
      <HeroFull />
    </a>
  </main>
</Layout>

<style>
  :root {
    --profile-img-max-width: 400px;
  }

  body{
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .body-section{
    position: fixed;
    width: 100vw;
    height: 100vh;
    /* cursor arrow */
    cursor:unset;
  }

  main {
    padding: 4rem;
    margin: 0;
    width: 100%;
  }

  .info {
      display: flex;
      flex-direction: column;
    }

  .name {
    font-weight: 400;
    font-size: 2rem;
  }

  h1 {
    font-weight: 400;
  }

  h2 {
    color: var(--color-text);
    font-weight: 300;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    /* aspect-ratio: 1 / 1; */
    object-fit: cover;
    max-width: var(--profile-img-max-width);
    border-radius: 16px;
  }

  section{
    display: flex;
    /* justify-content: center; */
    align-items: center;
    flex-direction: column;
    gap: 2rem;
  }

  div {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin: 2rem;
    
  }

  figure {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    padding: 1rem;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }

</style>